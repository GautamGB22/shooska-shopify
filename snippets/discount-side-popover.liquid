{%  style  %} 
    .discount-banner-container {
      position: fixed;
      bottom: 20%;
      left: 0;
      z-index: 9999;
    }

    /* CSS for the banner */
    .discount-banner {
      background-color: #000;
      color: #fff;
      padding: 10px;
      font-size: 14px;
      font-weight: bold;
      display: flex;
      justify-content: space-between;
      position: relative; 
    }

    .discount-offer-link span {
        color: #fff;
    }

    .discount-banner:hover .click-to-copy {
        opacity: 1;
        font-size: 10px;
        font-weight: 500;
        padding: 0 10px;
    }
    .discount-banner .click-to-copy { opacity: 0; }

    /* CSS for the close button */
    .close-btn {
      cursor: pointer;
      padding: 0 6px;
      position: absolute;
      top: -10px;
      right: -10px;
      background-color: #fff;
      color: #000;
      border-radius: 50%;
    }

    @media screen and (max-width: 768px) {
        .discount-banner-container {
            bottom: 0;
            top: auto;
            width: 100%;
        }
        .discount-offer-link { margin: 20px; }
        .discount-banner { justify-content: center; }
        .discount-banner .click-to-copy { opacity: 1; padding-left: 8px; }
        .close-btn {
            top: -10px;
            right: 0px;
        }
    }
{% endstyle %}

<div class="discount-banner-container">
  <div class="discount-banner">
      <a class="discount-offer-link" href="https://shooska.com/discount/FIRST10" onclick="handleOfferClick()">
          <span>Use Code: FIRST10</span><span class="click-to-copy">(Click to copy)</span><br />
          <span>10% OFF ON YOUR FIRST OFFER!</span>
      </a>
      <span class="close-btn" onclick="closePopup()">X</span>
  </div>
</div>

<script>
  // Function to close the popup
  function closePopup() {
      document.querySelector('.discount-banner-container').style.display = 'none';
  }

  // Function to handle offer link click
  function handleOfferClick() {
      // Set session storage to indicate the offer link has been clicked
      sessionStorage.setItem('offerClicked', 'true');
  }

  // Check if the offer link has been clicked before
  window.onload = function () {
      if (sessionStorage.getItem('offerClicked')) {
          document.querySelector('.discount-banner-container').style.display = 'none';
      }
  };
</script>

  